<h2 class="color-pink mb-10">Productos registrados</h2>
<p class="color-main-gray mb-20">Productos que ha dado de alta en el taller:</p>
<div class="d-flex f-wrap mb-10"> 
    <% productosTaller.forEach(producto => { %> 
        <div class="row mb-20">
            <div class="d-flex f-column w-100">
                <p class="color-pink font-w-500 mb-10"><%= producto.dataValues.nombre %></p>
                <div class="row w-100">
                    <img src="/img/productos/<%= producto.dataValues.foto %>" class="bordered-img col-2">
                    <div class="ml-10 d-flex f-column start-y col-10">
                        <label class="font-w-600 font-md color-main-gray mb-10">Descripci√≥n:</label>
                        <p class="color-main-gray"><%= producto.dataValues.descripcion %></p>
                        <div class="mt-20 row-no-space">
                            <div class="d-flex f-column col-4">
                                <label class="font-w-600 font-md color-main-gray mb-10">Precio:</label>
                                <p class="color-main-gray">$<%= producto.dataValues.precio %> MXN</p>
                            </div>
                            <div class="d-flex f-column col-4">
                                <label class="font-w-600 font-md color-main-gray mb-10">Cantidad:</label>
                                <p class="color-main-gray"><%= producto.dataValues.stock %> productos</p>
                            </div>
                            <button class="col-4 bg-main-blue" onclick="location.href='/edit/producto/<%= producto.dataValues.codigo %>'">Editar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% }); %> 
</div>
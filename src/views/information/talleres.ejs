<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="/assets/css/colors.css">
    <link rel="stylesheet" href="/assets/css/navbar/navbar.css">
    <link rel="stylesheet" href="/assets/css/footer/footer.css">
    <link rel="stylesheet" href="/assets/css/register/register_form.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">

    <title>SIVENART</title>
</head>

<body class="bg-sand">
    <header>
        <%- include('../navbar') %>
    </header>
    <div class="half-image-bg" style="background-image: url('/img/fondo-registro.png');"></div>

    <div class="transparent main-content">
        <section class="w-100 d-flex f-column center-y p-10">
            <div class="mt-10 bg-white card-1200 d-flex f-column center-x">
                <h1 class="font-xl color-main-blue mr-10">Talleres afiliados</h1>
                <p class="mt-10 color-main-gray">Conoce los talleres afiliados a SIVENART:</p>
            </div>
            <!-- Sección para los talleres -->
            <div class="d-flex f-wrap w-100 m-16 max-w-1200">
                <% talleres.forEach(taller=> { %>
                    <div class="d-flex f-row bg-white card-1200 m-10 mb-20">
                        <img src="/img/usuarios/<%-taller.avatar%>" style="height: 200px; border-radius: 3%;">
                        <div class="d-flex f-column ml-10">
                            <p class="color-pink font-w-500 mb-10 uppercase">
                                <%- taller.nombre %>
                            </p>
                            <p class="mt-10 color-main-gray font-md mb-10">
                                <strong>SOBRE EL TALLER</strong><br>
                                <%- taller.descripcion %>
                            </p>
                            <p class="mt-10 color-main-gray font-md">
                                <strong>DIRECCIÓN</strong><br> <%= taller.calle %> #<%= taller.numero %>, colonia <%= taller.colonia %>, C.P. <%= taller.codigo_postal %>, <%= taller.localidad %>, <%= taller.entidad %>.
                            </p>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </section>
    </div>
</body>

</html>